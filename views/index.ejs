<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Practice</title>
</head>
<body>
     <div class="main w-full min-h-screen bg-zinc-900 text-white" >
     <div class="form p-10">
        <form action="/create" method="post">
            <input class="block w-full outline-none rounded-lg px-5 py-2 bg-zinc-800  "  type="text" placeholder="Title"  name="title" >
            <textarea class="block w-full outline-none rounded-lg mt-2 px-5 py-2 bg-zinc-800 resize-none " name="details" placeholder="Write your task details here" id=""></textarea>
            <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md " type="submit" value="Create Task" name="" id="">
        </form>
     </div>
     <div class="tasks flex gap-3 flex-wrap p-10" >
        <% if(files.length>0){ %>
            <% files.forEach(function(val){ %>
            <div class="task min-w-60 px-3 py-4 bg-zinc-800 rounded-md" >
            <h1 class="text-white text-3xl tracking-tighter"> <%= val.replace('.txt', '') %></h1>
            <div class="flex justify-between mt-3">
                <a class="text-blue-500 inline-block   " href="/files/<%=val%>"> Read More. </a>
                <form action="/del/<%=val%>" method="get" >
                <label class="flex items-center gap-2 cursor-pointer ">
                    <input type="checkbox" class="appearance-none w-5 h-5 border-2 border-green-500 rounded-md checked:bg-green-500 checked:border-green-500 transition duration-200"  onchange="this.form.submit()">
                    <span class="text-white"></span>
                </label>
                </form>

            </div>
            <a  class="text-zinc-600" href="/edit/<%=val%>">Edit Title</a>
            
            </div>
            <%}) %>
        <%} else{ %>
            <h3 class="text-zinc-600" >No tasks yet.</h3>
       <% }%>
       </div>
        
        

     </div>
</body>
</html>